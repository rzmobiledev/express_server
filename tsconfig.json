{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "allowJs": true,
        "experimentalDecorators": true,
        "rootDirs": [
            "./src"
        ],
    },
    "include": [
        "src/**/**.ts",
        "src/config/config.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}